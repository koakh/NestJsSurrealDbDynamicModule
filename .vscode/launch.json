{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [   
    {
      "name": "Launch via Yarn",
      "request": "launch",
      "runtimeArgs": [
        "run",
        "start:debug"
      ],
      "runtimeExecutable": "yarn",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceFolder}/packages/app-rst",
      "envFile": ".env",
      // without this we can't se the Logger std out
      "outputCapture": "std",
      "console": "integratedTerminal"      
    },
    {
      "name": "Attach to NestJS",
      "request": "attach",
      "port": 9232,
      "restart": true,
      "type": "node",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
  ]
}